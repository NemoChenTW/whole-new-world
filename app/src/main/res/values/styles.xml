<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="POIButtonStyle">
        <item name="android:background">@drawable/bg_balloon_button</item>
        <item name="android:layout_marginTop">@dimen/spacing_small</item>
        <!--<item name="android:layout_marginBottom">@dimen/spacing_small</item>-->
        <item name="android:layout_marginStart">@dimen/spacing_xtiny</item>
        <item name="android:layout_marginEnd">@dimen/spacing_xtiny</item>
        <item name="android:paddingStart">@dimen/spacing_xsmall</item>
        <item name="android:paddingEnd">@dimen/spacing_xsmall</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="anim_menu_bottombar">
        <item name="android:windowEnterAnimation">@anim/menu_bottombar_in</item>
        <item name="android:windowExitAnimation">@anim/menu_bottombar_out</item>
    </style>

    <style name="Transparent_Dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

</resources>
