<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent_30" >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints"
        android:paddingBottom="@dimen/spacing_small">

        <TextView
            android:id="@+id/greeting_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ask_category_string"
            android:textSize="16sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/greeting_title"
            android:orientation="vertical">

            <Button
                style="@style/POIButtonStyle"
                android:id="@+id/feeling_button_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <Button
                style="@style/POIButtonStyle"
                android:id="@+id/feeling_button_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <Button
                style="@style/POIButtonStyle"
                android:id="@+id/feeling_button_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <Button
                style="@style/POIButtonStyle"
                android:id="@+id/feeling_button_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>